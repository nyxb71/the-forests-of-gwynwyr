{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/the_forests_of_gwynwyr.csproj"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "-c",
        "Release",
        "-r",
        "win10-x64",
        "${workspaceFolder}/the_forests_of_gwynwyr.csproj"
      ],
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/the_forests_of_gwynwyr.csproj"
      ],
      "problemMatcher": "$tsc"
    }
  ]
}
